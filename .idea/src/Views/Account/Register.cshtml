@model BookManagement.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

@section Styles {
    <link href="~/css/register.css" rel="stylesheet" />
}

<div class="register-wrapper">
    <div class="register-background">
        <div class="background-shapes">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
            <div class="shape shape-3"></div>
            <div class="shape shape-4"></div>
        </div>
    </div>
    
    <div class="register-container">
        <div class="register-card">
            <div class="register-header">
                <div class="logo-container">
                    <h1 class="brand-name">BookManager</h1>
                </div>
                <div class="welcome-text">
                    <h2>Create Account</h2>
                    <p>Join BookManager and start building your library</p>
                </div>
            </div>

            <form asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" id="registerForm" class="register-form">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger validation-summary" role="alert"></div>
                
                <div class="name-row">
                    <div class="form-group half-width">
                        <div class="input-container">
                            <label class="label">First Name</label>
                            <input asp-for="FirstName" 
                                   class="form-input" 
                                   placeholder="John" 
                                   autocomplete="given-name" 
                                   required />
                        </div>
                        <span asp-validation-for="FirstName" class="field-validation-error"></span>
                    </div>

                    <div class="form-group half-width">
                        <div class="input-container">
                            <label class="label">Last Name</label>
                            <input asp-for="LastName" 
                                   class="form-input" 
                                   placeholder="Doe" 
                                   autocomplete="family-name" 
                                   required />
                        </div>
                        <span asp-validation-for="LastName" class="field-validation-error"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="input-container">
                        <label class="label">Email Address</label>
                        <input asp-for="Email" 
                               class="form-input" 
                               placeholder="john.doe@example.com" 
                               autocomplete="email" 
                               required />
                        </div>
                    <span asp-validation-for="Email" class="field-validation-error"></span>
                </div>

                <div class="form-group">
                    <div class="input-container">
                        <label class="label">Password</label>
                        <input asp-for="Password" 
                               class="form-input" 
                               placeholder="password" 
                               type="password" 
                               autocomplete="new-password" 
                               required />
                    </div>
                    <span asp-validation-for="Password" class="field-validation-error"></span>
                </div>

                <div class="form-group">
                    <div class="input-container">
                        <label class="label">Confirm Password</label>
                        <input asp-for="ConfirmPassword" 
                               class="form-input" 
                               placeholder="password" 
                               type="password" 
                               autocomplete="new-password" 
                               required />
                        <div class="password-match" id="passwordMatch"></div>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
                </div>

                <button type="submit" class="register-btn" id="registerBtn">
                    <span class="btn-text">Create Account</span>
                    <div class="btn-loader">
                        <div class="spinner"></div>
                    </div>
                </button>

                <div class="login-link">
                    <p>Already have an account? 
                        <a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">
                            Sign in here
                        </a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/register.js"></script>
}
